    <%= form_for :user, :url => users_path, :html => { :class => "well" } do |f| %>
      <%= render 'shared/error_messages_user' %>
      <fieldset class="center">
        <legend ="center">New User</legend>
        <div class="control-group">
          <%= f.text_field :email, :class => "span3", :placeholder => "Email" %>
          <%= f.password_field :password, :class => "span3", :placeholder => "Password" %>
          <%= f.password_field :password_confirmation, :class => "span3", :placeholder => "Confirm Password" %>
        </div>
        <div class="row-fluid">
          <div class="span12">
            <div class="row-fluid">
              <div class="span6">
                <!-- TOFIX! Very bad hack with manual pixel hunting (style=...) -->
                <%= f.submit "Register!", :class => "btn btn-large btn-primary", :style => "margin-top:1em" %>
              </div>
              <div class="span6">
                <div class="control-group">
                  <button type="submit" class="btn btn-info">Register with Facebook</button>
                </div>
                <div class="control-group">
                  <button type="submit" class="btn btn-info">Register with VKontakte</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </fieldset>
    <% end %>
